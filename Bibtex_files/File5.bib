journal = {Journal of Neuroscience},
keywords = {Amygdala,Arthritis pain,Electrophysiology,Metabotropic glutamate receptors,Nociception,Patch-clamp,Plasticity,Synaptic transmission},
month = {jan},
number = {1},
pages = {52--63},
publisher = {Society for Neuroscience},
title = {{Synaptic plasticity in the amygdala in a model of arthritic pain: Differential roles of metabotropic glutamate receptors 1 and 5}},
