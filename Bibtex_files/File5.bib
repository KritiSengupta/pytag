file = {:C\:/Users/Kriti/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Gatlin et al. - 2009 - Spindle Fusion Requires Dynein-Mediated Sliding of Oppositely Oriented Microtubules.pdf:pdf},
journal = {Current Biology},
keywords = {CELLBIO},
month = {feb},
