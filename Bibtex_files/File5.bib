journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Comparative microbial genomics,Deep-sea hydrothermal,Pathogenesis,Symbiosis,Vent,$\epsilon$-Proteobacteria},
month = {jul},
