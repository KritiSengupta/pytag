journal = {Microbiology},
month = {oct},
number = {10},
pages = {2875--2883},
title = {{A mannose-sensitive haemagglutinin (MSHA)-like pilus promotes attachment of Pseudoalteromonas tunicata cells to the surface of the green alga Ulva australis}},
