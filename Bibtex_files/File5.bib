file = {:C\:/Users/Kriti/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Sokolova, P{\"{o}}rtner - 2003 - Metabolic plasticity and critical temperatures for aerobic scope in a eurythermal marine invertebrate (Littor.pdf:pdf},
journal = {Journal of Experimental Biology},
keywords = {Aerobic scope,Critical temperatures,Littorina,Metabolic cold compensation,Respiration,Temperature adaptation},
month = {jan},
number = {1},
pages = {195--207},
title = {{Metabolic plasticity and critical temperatures for aerobic scope in a eurythermal marine invertebrate (Littorina saxatilis, Gastropoda: Littorinidae) from different latitudes}},
