journal = {Journal of Experimental Biology},
keywords = {Acclimation,Heat-shock protein,Molecular chaperone,Phenotypic plasticity,Tegula,Two-dimensional gel electrophoresis},
month = {aug},
number = {16},
pages = {3133--3143},
title = {{Two-dimensional gel analysis of the heat-shock response in marine snails (genus Tegula): Interspecific variation in protein expression and acclimation ability}},
