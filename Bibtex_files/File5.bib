journal = {Proceedings of the National Academy of Sciences of the United States of America},
keywords = {Adaptive maternal effect,Anisogamy,Sperm competition,Transgenerational plasticity},
month = {sep},
number = {36},
pages = {13508--13513},
title = {{Gamete plasticity in a broadcast spawning marine invertebrate}},
volume = {105},
year = {2008}
}
@article{Dalisay2006,
