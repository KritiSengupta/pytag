file = {:C\:/Users/Kriti/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Balasubramanian et al. - 2010 - High-density polyethylene (HDPE)-degrading potential bacteria from marine ecosystem of Gulf of Mannar, I.pdf:pdf},
journal = {Letters in Applied Microbiology},
keywords = {biodegradation,biofilm,biomass,high-density polyethylene,marine ecosystem},
number = {2},
pages = {205--211},
publisher = {Blackwell Publishing Ltd},
title = {{High-density polyethylene (HDPE)-degrading potential bacteria from marine ecosystem of Gulf of Mannar, India}},
volume = {51},
year = {2010}
