journal = {Journal of Dairy Science},
keywords = {Carbon footprint,DairyGHG,Farm model,Greenhouse gas},
month = {mar},
number = {3},
pages = {1266--1282},
title = {{The carbon footprint of dairy production systems through partial life cycle assessment}},
