journal = {Journal of Hazardous Materials},
keywords = {Cadmium,Enzymatic activities,Oxidative stress,Polyacrylate polymers,Sorghum},
month = {jan},
number = {1-3},
pages = {570--575},
title = {{Improvement in soil and sorghum health following the application of polyacrylate polymers to a Cd-contaminated soil}},
volume = {173},
year = {2010}
}
@article{Hadad2005,
