journal = {Annals of Botany},
keywords = {Betula nana,Betula pendula,Betula pubescens,Construction cost,Leaf density,Leaf dry mass per unit area,Leaf size,Nitrogen content,Photosynthetic electron transport rate,Plasticity,Tree height},
