file = {:C\:/Users/Kriti/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Suriyagoda et al. - 2010 - Multiple adaptive responses of australian native perennial legumes with pasture potential to grow in phosphor.pdf:pdf},
journal = {Annals of Botany},
keywords = {Australian native legumes,Carboxylates,Climate change,Cullen spp.,Drought,Medicago sativa,Novel crops,Perennial pastures,Phosphorus,Photosynthesis,Root distribution,Water-use efficiency},
month = {may},
number = {5},
pages = {755--767},
title = {{Multiple adaptive responses of australian native perennial legumes with pasture potential to grow in phosphorus- and moisture-limited environments}},
