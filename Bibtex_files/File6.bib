doi = {10.1021/AM4054578},
journal = {ACS Applied Materials and Interfaces},
keywords = {antibiofouling,degradation,hydrolysis,poly(triisopropylsilyl acrylate),poly($\epsilon$-caprolactone),polyurethane},
